<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_alerts"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#828282"
    tools:context="mcmaster.eguardian.Alerts">

    <Button
        android:id="@+id/buttonPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set New Alert" />

    <Button
        android:id="@+id/buttonDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonPrompt"
        android:text="Delete Alerts" />

    <TextView
        android:id="@+id/alertResult"
        android:layout_marginTop="90dp"
        android:layout_width="match_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_height="wrap_content" />

    <TableLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/buttonDelete"
        android:orientation="horizontal"
        android:stretchColumns="*" >

    <TableRow
        android:id="@+id/alertHeader"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark" >

        <LinearLayout
            android:id="@+id/divider"
            android:layout_width="1dp"
            android:layout_height="match_parent" >

            <View style="@style/Divider_invisible" />
        </LinearLayout>

        <TextView
            android:id="@+id/alertName"
            android:paddingBottom="10dp"
            android:paddingLeft="0dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:text="@string/alert_name"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent" >

            <View style="@style/Divider" />
        </LinearLayout>

        <TextView
            android:id="@+id/message"
            android:paddingBottom="10dp"
            android:paddingLeft="0dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:text="@string/message"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent" >

            <View style="@style/Divider" />
        </LinearLayout>

        <TextView
            android:id="@+id/date"
            android:paddingBottom="10dp"
            android:paddingLeft="0dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:text="Date"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent" >

            <View style="@style/Divider" />
        </LinearLayout>

        <TextView
            android:id="@+id/time"
            android:paddingBottom="10dp"
            android:paddingLeft="0dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:text="Time"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </TableRow>


    </TableLayout>

</RelativeLayout>
