<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mcmaster.eguardian">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Alerts"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".HeartRate"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".SleepActivity"
            android:screenOrientation="portrait"></activity>


        <meta-data android:name="DATABASE" android:value="eguardian.db" />
        <meta-data android:name="VERSION" android:value="2" />
        <meta-data android:name="QUERY_LOG" android:value="false" />
        <meta-data android:name="DOMAIN_PACKAGE_NAME" android:value="mcmaster.eguardian" />
    </application>

</manifest>